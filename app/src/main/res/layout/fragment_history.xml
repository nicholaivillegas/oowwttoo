<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:cardElevation="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                android:id="@+id/text_datetime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:text="03/14/1995, 07:45PM"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/image_divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/text_datetime"
                android:layout_marginTop="3dp"
                android:background="@color/colorDivider" />

            <TextView
                android:id="@+id/text_pickup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_datetime"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:drawableLeft="@drawable/ic_my_location_black_18dp"
                android:drawablePadding="5dp"
                android:padding="5dp"
                android:text="Trinoma Landmark"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/text_destination"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_pickup"
                android:layout_marginLeft="10dp"
                android:drawableLeft="@drawable/ic_location_on_black_18dp"
                android:drawablePadding="5dp"
                android:padding="5dp"
                android:text="The One Executive Office"
                android:textSize="16sp" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:cardElevation="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <TextView
                android:id="@+id/text_datetime1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:text="03/15/2001, 12:48AM"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/text_pickup1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_datetime1"
                android:layout_marginLeft="10dp"
                android:drawableLeft="@drawable/ic_my_location_black_18dp"
                android:drawablePadding="5dp"
                android:padding="5dp"
                android:text="SM North Edsa"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/text_destination1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_pickup1"
                android:layout_marginLeft="10dp"
                android:drawableLeft="@drawable/ic_location_on_black_18dp"
                android:drawablePadding="5dp"
                android:padding="5dp"
                android:text="St. Charbel Homes"
                android:textSize="16sp" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>